.todos
    fadeIn(.3s)
    flex-grow 1
    padding 35px
    
    &__item
        padding 0 12px
        margin 10px 0
        background-color oc-gray-0
        display flex
        height 40px
        align-items center
        border-radius 2px
        &--checked
            text-decoration line-through

        &--title
            width 95%

        &--input
            background-color transparent
            flex-grow 1
            border none
            outline none
            padding-left 5px
            height 85%
            &:focus
                box-shadow 0px 1px 0px 0px oc-cyan-2
    
    &__form
        display flex
        
        &--input
            flex-grow 1
            margin-right 10px
            
            &:focus
                placeholder(transparent)
