.button
    button(oc-gray-8)
    color #f
    border 0 !important
    outline 0 !important
    height 30px
    border-radius 2px
    text-transform none
    min-width 100px
    text-align center
    display flex
    vertical-align top
    align-items center
    justify-content center
    
    &-img
        position relative
        height 16px
    
    &--large
        height 35px
        min-width 150px
    
    &--red
        button(oc-red-8)
