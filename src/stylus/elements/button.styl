.button
    button(oc-gray-8)
    color #f
    border 0 !important
    outline 0 !important
    height 40px
    border-radius 2px
    text-transform none
    min-width 100px
    text-align center
    display flex
    vertical-align top
    align-items center
    justify-content center
    font-size 1em
    
    &-img
        position relative
        height 16px
        
    &--red
        button(oc-red-8)

    &--grey
        color oc-gray-5
        cursor pointer
        transition color 0.15s linear
        background-color transparent
        border none
        outline none
        &:hover
            color oc-gray-6
